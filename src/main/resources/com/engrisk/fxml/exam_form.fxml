<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="288.0" prefWidth="422.0"
      style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/17">
    <children>
        <VBox prefHeight="109.0" prefWidth="402.0">
            <children>
                <Label text="Tên khóa thi"/>
                <TextField fx:id="nameTextField" prefHeight="32.0" prefWidth="402.0"/>
            </children>
        </VBox>
        <VBox prefHeight="107.0" prefWidth="402.0">
            <children>
                <Label text="Trình độ"/>
                <ComboBox fx:id="typeComboBox" prefHeight="7.0" prefWidth="93.0"/>
            </children>
        </VBox>
        <VBox prefHeight="109.0" prefWidth="402.0">
            <children>
                <Label text="Phí dự thi"/>
                <TextField fx:id="priceTextField" prefHeight="32.0" prefWidth="402.0"/>
            </children>
        </VBox>
        <VBox prefHeight="99.0" prefWidth="402.0">
            <children>
                <Label text="Ngày thi"/>
                <DatePicker fx:id="examDatePicker" prefHeight="32.0" prefWidth="237.0"/>
            </children>
        </VBox>
        <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="33.0" prefWidth="402.0"
              style="-fx-spacing: 15;">
            <children>
                <Button mnemonicParsing="false" onAction="#onSaveClick" prefHeight="45.0" prefWidth="66.0" text="Lưu"/>
                <Button mnemonicParsing="false" onAction="#onCancelClick" prefHeight="21.0" prefWidth="63.0"
                        text="Hủy"/>
            </children>
        </HBox>
    </children>
</VBox>
