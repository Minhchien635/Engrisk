<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox nodeOrientation="LEFT_TO_RIGHT" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-insets: 0;" VBox.vgrow="ALWAYS">
        <VBox spacing="16.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            <VBox spacing="4.0">
                <Label text="Label" />
                <TextField maxWidth="1.7976931348623157E308" />
            </VBox>
            <VBox spacing="4.0">
                <Label text="Label" />
                <ComboBox maxWidth="1.7976931348623157E308" />
            </VBox>
            <VBox spacing="4.0">
                <Label text="Label" />
                <DatePicker maxWidth="1.7976931348623157E308" />
            </VBox>
        </VBox>
    </ScrollPane>
    <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT" spacing="16.0" style="-fx-border-width: 1 0 0 0; -fx-border-color: rgb(181,181,181);" VBox.vgrow="NEVER">
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
        </padding>
        <Button mnemonicParsing="false" onAction="#onSaveClick" prefWidth="60.0" text="Lưu" />
        <Button mnemonicParsing="false" onAction="#onCancelClick" prefWidth="60.0" text="Hủy" />
    </HBox>
</VBox>
